{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "Release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
  "@release-it/conventional-changelog": {
    "preset": { "name": "angular" },
    "infile": "CHANGELOG.md"
    }
  }
}